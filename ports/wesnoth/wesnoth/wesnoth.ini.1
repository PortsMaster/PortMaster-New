[config]
repeat_delay = 16
mouse_delay = 16
repeat_rate = 60
mouse_slow_scale = 40
deadzone_mode = scaled_radial
deadzone_scale = 6
deadzone_x = 2000
deadzone_y = 2000
deadzone_triggers = 3000
dpad_mouse_normalize = true

[controls]

overlay = "clear"

a = "mouse_left"
b = "mouse_right"
x = "v" add_ctrl
y = mouse_slow

l1 = "-"
l2 = "+"
l3 = "0"

r1 = "n"
r2 = "a" add_ctrl

start = "space" add_ctrl
select = "esc"

up = "up"
down = "down"
left = "left"
right = "right"

left_analog = mouse_movement

start = hold_state hotkey
[controls:hotkey]
overlay=clear
down = push_state text_input

[controls:text_input]
overlay = clear
charset = "extended"
up    = prev_letter
down  = next_letter
right = add_letter
left  = backspace
a     = add_letter
b     = backspace
start = pop_state
back  = toggle_case
