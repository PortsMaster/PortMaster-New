<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
  <fire>
   <direction>0</direction>
   <bulletRef label="nrm"/>
  </fire>
  <repeat> <times>1+$rank*5.2</times>
  <action>
   <fire>
    <direction type="sequence">25</direction>
    <bulletRef label="nrm"/>
   </fire>
  </action>
  </repeat>
  <fire>
   <direction>-25</direction>
   <bulletRef label="nrm"/>
  </fire>
  <repeat> <times>1+$rank*5.2-1</times>
  <action>
   <fire>
    <direction type="sequence">-25</direction>
    <bulletRef label="nrm"/>
   </fire>
  </action>
  </repeat>
  <wait>50</wait>
</action>

<bullet label="nrm">
 <speed>1</speed>
</bullet>

</bulletml>
