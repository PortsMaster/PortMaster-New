<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
	<changeSpeed>
		<speed type="relative">-0.7</speed>
		<term>6+$rank*4</term>
	</changeSpeed>
	<wait>6+$rank*4</wait>
	<changeSpeed>
		<speed type="relative">0.7+$rank*0.3</speed>
		<term>7</term>
	</changeSpeed>
	<wait>7</wait>
    <fire>
		<direction type="relative">0</direction>
		<speed type="relative">0</speed>
		<bullet/>
	</fire>
	<vanish/>
</action>

</bulletml>
