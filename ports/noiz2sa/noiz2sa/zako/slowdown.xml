<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="topmove">
 <changeSpeed>
  <speed>1.5</speed>
  <term>1</term>
 </changeSpeed>
 <changeDirection>
  <direction type="absolute">165+$rand*30</direction>
  <term>1</term>
 </changeDirection>
 <wait>1</wait>
 <changeSpeed>
  <speed>0</speed>
  <term>50</term>
 </changeSpeed>
 <wait>100</wait>
 <changeSpeed>
  <speed>-0.5</speed>
  <term>90</term>
 </changeSpeed>
</action>

<action label="topshot">
 <repeat> <times>3</times>
 <action>
  <fire>
   <direction>0</direction>
   <bulletRef label="nrm"/>
  </fire>
  <repeat> <times>$rank*2</times>
  <action>
   <fire>
    <direction type="sequence">12</direction>
    <bulletRef label="nrm"/>
   </fire>
  </action>
  </repeat>
  <fire>
   <direction>0</direction>
   <bulletRef label="nrm"/>
  </fire>
  <repeat> <times>$rank*2</times>
  <action>
   <fire>
    <direction type="sequence">-12</direction>
    <bulletRef label="nrm"/>
   </fire>
  </action>
  </repeat>
  <wait>128</wait>
 </action>
 </repeat>
</action>

<bullet label="nrm">
 <speed>0</speed>
 <action>
  <wait>8</wait>
  <changeSpeed>
   <speed>2.0</speed>
   <term>5</term>
  </changeSpeed>
  <wait>5</wait>
  <changeSpeed>
   <speed>0.5</speed>
   <term>25</term>
  </changeSpeed>
 </action>
</bullet>

</bulletml>
