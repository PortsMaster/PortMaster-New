<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="topmove">
 <changeSpeed>
  <speed>1.1</speed>
  <term>1</term>
 </changeSpeed>
</action>

<action label="topshot">
 <repeat> <times>3+$rank*8</times>
 <action>
  <fire>
   <bulletRef label="nrm"/>
  </fire>
  <wait>48-$rank*32</wait>
 </action>
 </repeat>
</action>

<bullet label="nrm">
 <speed>0.5</speed>
</bullet>

</bulletml>
