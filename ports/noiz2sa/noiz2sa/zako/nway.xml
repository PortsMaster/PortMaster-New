<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="topmove">
 <changeSpeed>
  <speed>0.5</speed>
  <term>1</term>
 </changeSpeed>
 <wait>1</wait>
 <changeSpeed>
  <speed>0</speed>
  <term>120</term>
 </changeSpeed>
 <wait>180</wait>
 <changeSpeed>
  <speed>-0.8</speed>
  <term>90</term>
 </changeSpeed>
</action>

<action label="topshot">
 <repeat> <times>3</times>
 <action>
  <fire>
   <direction>0</direction>
   <bulletRef label="nrm"/>
  </fire>
  <repeat> <times>$rank*3</times>
  <action>
   <fire>
    <direction type="sequence">15</direction>
    <bulletRef label="nrm"/>
   </fire>
  </action>
  </repeat>
  <fire>
   <direction>0</direction>
   <bulletRef label="nrm"/>
  </fire>
  <repeat> <times>$rank*3</times>
  <action>
   <fire>
    <direction type="sequence">-15</direction>
    <bulletRef label="nrm"/>
   </fire>
  </action>
  </repeat>
  <wait>128</wait>
 </action>
 </repeat>
</action>

<bullet label="nrm">
 <speed>0.6</speed>
</bullet>

</bulletml>
