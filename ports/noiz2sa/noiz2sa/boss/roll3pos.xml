<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
 <actionRef label="3s">
  <param>$rand*360</param>
 </actionRef>
 <wait>180</wait>
 <vanish/>
</action>

<action label="3s">
 <fire>
  <direction type="absolute">120</direction>
  <bulletRef label="seed">
   <param>$1</param>
  </bulletRef>
 </fire>
 <fire>
  <direction type="absolute">180</direction>
  <bulletRef label="seed">
   <param>$1</param>
  </bulletRef>
 </fire>
 <fire>
  <direction type="absolute">240</direction>
  <bulletRef label="seed">
   <param>$1</param>
  </bulletRef>
 </fire>
</action>

<bullet label="seed">
 <speed>10</speed>
 <action>
  <wait>2</wait>
  <fire>
   <bulletRef label="seed2">
    <param>$1</param>
   </bulletRef>
  </fire>
  <vanish/>
 </action>
</bullet>

<bullet label="seed2">
 <speed>0</speed>
 <action>
  <fire>
   <direction type="absolute">$1</direction>
   <bulletRef label="nrm"/>
  </fire>
  <repeat> <times>20+$rank*60</times>
  <action>
   <fire>
    <direction type="sequence">20-$rank*15</direction>
    <bulletRef label="nrm"/>
   </fire>
   <wait>160/(20+$rank*60)</wait>
  </action>   
  </repeat>
  <vanish/>
 </action>
</bullet>

<bullet label="nrm">
 <speed>0.8</speed>
</bullet>

</bulletml>
