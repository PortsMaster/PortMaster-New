<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
<repeat><times>15+$rank*10</times>
<action>
	<fire>
		<direction>-45+$rand*90</direction>
		<speed>1</speed>
		<bullet/>
	</fire>
	<fire>
		<direction>-45+$rand*90</direction>
		<speed>1</speed>
		<bulletRef label="slow"/>
	</fire>
	<wait>1</wait>
</action>
</repeat>
<wait>30</wait>
<vanish/>
</action>

<bullet label="slow">
	<action>
		<wait>24</wait>
		<changeSpeed>
			<speed>0.6</speed>
			<term>8</term>
		</changeSpeed>
	</action>
</bullet>

</bulletml>
