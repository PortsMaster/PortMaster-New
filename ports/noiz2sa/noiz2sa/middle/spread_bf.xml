<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="topmove">
<changeSpeed>
 <speed>-0.1</speed>
 <term>1</term>
</changeSpeed>
</action>

<action label="topshot">
 <actionRef label="spread">
  <param>4+$rank*12</param>
  <param>120/(4+$rank*12)</param>
  <param>120/(-4-$rank*12)</param>
 </actionRef>
</action>

<action label="spread">
 <fire>
  <direction type="absolute">120</direction>
  <bulletRef label="nrm"/>
 </fire>
 <repeat> <times>99</times>
 <action>
  <repeat> <times>$1</times>
  <action>
   <fire>
    <direction type="sequence">$2</direction>
    <bulletRef label="nrm"/>
   </fire>
   <wait>8-$rank*4</wait>
  </action>
  </repeat>
  <repeat> <times>$1</times>
  <action>
   <fire>
    <direction type="sequence">$3</direction>
    <bulletRef label="nrm"/>
   </fire>
   <wait>6-$rank*4</wait>
  </action>
  </repeat>
 </action>
 </repeat> 
</action>

<bullet label="nrm">
 <speed>0.6</speed>
</bullet>

</bulletml>
