<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="topmove">
<changeSpeed>
 <speed>0.2</speed>
 <term>1</term>
</changeSpeed>
</action>

<action label="topshot">
 <repeat> <times>1+$rank*4</times>
  <action> 
   <fire>
    <bulletRef label="seed"/>
   </fire>
   <wait>56-$rank*30</wait>
  </action>
 </repeat>
</action>

<bullet label="seed">
 <action>
  <fire>
   <bulletRef label="crv"/>
  </fire>
  <repeat> <times>15</times>
  <action>
   <fire>
    <direction type="sequence">22.5</direction>
    <bulletRef label="crv"/>
   </fire>
  </action>
  </repeat>
  <vanish/>
 </action>
</bullet>

<bullet label="crv">
 <speed>-0.5-$rank*0.2</speed>
 <action>
  <changeSpeed>
   <speed>1.2+$rank*0.4</speed>
   <term>128</term>
  </changeSpeed>
 </action>
</bullet>

</bulletml>
