<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="topmove">
<changeSpeed>
 <speed>0.25</speed>
 <term>1</term>
</changeSpeed>
</action>

<action label="topshot">
  <fire>
   <bulletRef label="spread"/>
  </fire>
</action>

<bullet label="spread">
<speed>1.5</speed>
<action>
 <wait>25</wait>
 <repeat> <times>2+$rank*4</times>
 <action>
  <fire>
   <direction>50-$rand*100</direction>
   <bulletRef label="spread2"/>
  </fire>
 </action>
 </repeat>
 <vanish/>
</action>
</bullet>

<bullet label="spread2">
<speed>1.0</speed>
<action>
 <wait>25</wait>
 <repeat> <times>2+$rank*4</times>
 <action>
  <fire>
   <direction>50-$rand*100</direction>
   <bulletRef label="aim"/>
  </fire>
 </action>
 </repeat>
 <vanish/>
</action>
</bullet>

<bullet label="aim">
<speed>0.5</speed>
<action>
 <wait>10</wait>
 <fire>
  <bullet>
   <speed>0.6</speed>
  </bullet>
 </fire>
 <vanish/>
</action>
</bullet>

</bulletml>
