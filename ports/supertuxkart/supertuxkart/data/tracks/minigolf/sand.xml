<?xml version="1.0"?>
<particles emitter="box" box_x="0.5" box_y="0.5" box_z="0.0">

    <spreading angle="60"       />
    
    <velocity  x="0.000"
               y="0.0150"
               z="0.000"         />
    
    <materials>
      <material name="_particle_sand.png" shader="alphablend" clampu="Y" clampv="Y" ignore="Y"/>
    </materials>
        
    <!-- Amount of particles emitted per second -->
    <rate      min="100"
               max="400"         />
    
    <!-- Minimal and maximal lifetime of a particle, in milliseconds. -->
    <lifetime  min="1600"
               max="1900"         />
    
    <!-- Size of the particles -->
    <size      min="0.1"
               max="0.90"        />

    <color     min="64 64 64"
               max="128 128 64" />

    <!-- How much time in milliseconds before the particle is fully faded out  -->
    <fadeout   time="500"        />

    <gravity   strength="-0.06"
               only-force-time="1000" />
</particles>
