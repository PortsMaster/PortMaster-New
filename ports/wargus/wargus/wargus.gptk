[config]
repeat_delay = 16
mouse_delay = 16
repeat_rate = 60
mouse_slow_scale = 40
deadzone_mode = scaled_radial
deadzone_scale = 5
deadzone_x = 2000
deadzone_y = 2000
deadzone_triggers = 3000
dpad_mouse_normalize = true


[controls]
overlay = clear

dpad = mouse_movement
left_analog = mouse_movement

right_analog_up = "up"
right_analog_down = "down"
right_analog_left = "left"
right_analog_right = "right"

a = "mouse_left"
b = "mouse_right"
x = "b"
y = "p"

select = "esc"
start = hold_state hotkey_start
;guide = hold_state hotkey

l1 = "ctrl" hold_state hotkey_add_group
l2 = hold_state hotkey
r1 = hold_state hotkey_select_group
r2 = "shift"   ; Shift for queued commands



[controls:hotkey_add_group]
overlay = clear
x = "1"
a = "2"
b = "3"
y = "4"


[controls:hotkey_select_group]
overlay = clear
up = "up"
down = "down"
left = "left"
right = "right"
x = "1"
a = "2"
b = "3"
y = "4"


;[controls:hotkey_unit]
;overlay = clear
;a = "p"   ; Patrol ; peon peasant
;b = "t"   ; Stand ground ; tower
;x = "a"   ; Attack
;y = "s"   ; Stop


[controls:hotkey]
overlay = clear
a = "f" ; farm
b = "h" ; harvest ; town hall;
x = "b" ; build menu ; barracks
y = "p"   ; Patrol ; polymorph
up = "s"   ; Stop
down = "t"   ; Stand ground ; tower
left = "l" ; lightning ; lumber mill
right = "a"   ; Attack
r2 = hold_state hotkey_extra


[controls:hotkey_extra]
overlay = clear
a = "c"   ; cancel
b = "u"   ; upgrade
x = "d" ; death coil
y = "r"   ; research ; repair
up = "o" ; oil
down = "z"   ; Ztop
left = "e" ; eye of kilrog
right = "r" ; repair; raise dead



[controls:hotkey_start]
overlay = clear
up = "space"
down = push_state text_input
left = "h"
right = "space"
a = "enter"
b = "["
x = "]"
y = "esc"
l3 = "."
left_analog_up = "]"
left_analog_down = "["


[controls:text_input]
overlay = clear
charset = extended
start = pop_state
up = prev_letter
down = next_letter
right = add_letter
left = "backspace"
a = "enter"
b = "backspace"
select = "tab"
