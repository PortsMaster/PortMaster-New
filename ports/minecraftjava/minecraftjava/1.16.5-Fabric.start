wjgl/lwjgl-opengl/3.3.2/lwjgl-opengl-3.3.2-natives-linux-arm64.jar:./.minecraft/libraries/org/lwjgl/lwjgl-glfw/3.3.2/lwjgl-glfw-3.3.2-natives-linux-arm64.jar:./.minecraft/libraries/org/lwjgl/lwjgl-tinyfd/3.3.2/lwjgl-tinyfd-3.3.2-natives-linux-arm64.jar:./.minecraft/libraries/org/lwjgl/lwjgl-stb/3.3.2/lwjgl-stb-3.3.2-natives-linux-arm64.jar:./.minecraft/libraries/com/mojang/text2speech/1.11.3/text2speech-1.11.3.jar:./.minecraft/versions/1.16.5-Fabric/1.16.5-Fabric.jar net.fabricmc.loader.impl.launch.knot.KnotClient --username PM --version 1.16.5-Fabric --gameDir ./.minecraft --assetsDir ./.minecraft/assets --assetIndex 1.16 --uuid 0 --accessToken 0 --userType msa --versionType "PM" --width 640 --height 480

#Clean up after ourselves
$ESUDO $weston_dir/westonwrap.sh cleanup
if [[ "$PM_CAN_MOUNT" != "N" ]]; then
    $ESUDO umount "${weston_dir}"
    $ESUDO umount "${JAVA_HOME}"

fi
pm_finish

