<!--
    This file describes Skins Selector menu
-->
<resources>
	
	<!-- Main section -->
	<section name="menu_skins">
		
		<!-- true if menu appear with alpha apparition -->
		<boolean name = "alpha_appearing" value = "true" />
		<integer name = "alpha_max" value = "65" />
		
		
		<!-- Sprite for the background -->
		<sprite name="background">
			<image file="dialogs/skins/background.png">
				<grid pos="0,0" size="600,568" />
			</image>
		</sprite>
		
		<!-- Cursor to show what is the current selection -->
		<sprite name="cursor">
			<image file="dialogs/skins/cursor.png" />
		</sprite>
		
		<!-- Arrow down, if there is no place to display all skins -->
		<section name="arrow_down">
			<sprite name="sprite">
				<image file="dialogs/skins/arrow_down.png" />
			</sprite>
			
			<!-- Coords -->
			<integer name = "left" value="375" />
			<integer name = "top"  value="510" />
				
		</section>
		
		<!-- Arrow down, if there is no place to display all skins -->
		<section name="arrow_up">
			<sprite name="sprite">
				<image file="dialogs/skins/arrow_up.png" />
			</sprite>
			
			<!-- Coords -->
			<integer name = "left" value="375" />
			<integer name = "top"  value="75" />
				
		</section>
		
		<!-- If we can't use a skin because we have to unlock pieces first -->
		<image name = "logo_unavailable">
			<image-file file = "dialogs/skins/logo-unavailable.png"/>	
		</image>	
		
		<!-- Coords for displaying skins viewer -->
		<section name="skins-preview-coords">
			<integer name = "top" value = "145" />
			<integer name = "left" value = "175" />
			<integer name = "margin-horizontal" value = "40" />
			<integer name = "margin-vertical" value = "40" />
		</section>
		
	</section>
	
	
</resources>
