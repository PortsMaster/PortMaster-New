#!/bin/bash
# Set GAMEDIR to the current directory and set logfile
GAMEDIR="$PWD"
LOGFILE="$GAMEDIR/patchlog.txt"
LOGERR="$GAMEDIR/patchlog_error.txt"
START_TIME=$(date +%s)

# Redirect output and error to the log file
exec > >(tee -a "$LOGFILE") 2>&1
echo "GAMEDIR is set to: $GAMEDIR"

# Patch failure function
patch_failure() {
    mv "$LOGFILE" "$LOGERR"
    echo "Patching process failed."
    exit 1
}

# Exports
export DATADIR="$GAMEDIR/assets"
export DATAFILE="game.port"
export LD_LIBRARY_PATH="/usr/lib:$GAMEDIR/lib:$GAMEDIR/tools/libs:$LD_LIBRARY_PATH"
export SDL_GAMECONTROLLERCONFIG="$sdl_controllerconfig"
export TOOLDIR="$GAMEDIR/tools"
export TMPDIR="$GAMEDIR/tmp"
export PATH="$controlfolder:$GAMEDIR/tools:$PATH"

# Permissions
chmod 666 /dev/uinput

cd "$GAMEDIR"

# Expected checksum for the game archive
expected_checksum="3f5191529bc7ab27f9ea35737414fdf1"

extract_and_verify() {
    # Check if the zip file exists
    if [ -f "$DATADIR/taskforcekampas-win.zip" ]; then
        echo "taskforcekampas-win.zip detected in assets... patching started... this will take a few minutes..."
        
        # Calculate the MD5 checksum
        actual_checksum=$(md5sum "$DATADIR/taskforcekampas-win.zip" | awk '{print $1}')
        
        # Verify checksum
        if [ "$actual_checksum" = "$expected_checksum" ]; then
            echo "Checksum verified. Extracting..."
            
            # Extract using 7zip
            "$TOOLDIR/7zzs" x "$DATADIR/taskforcekampas-win.zip" -o"$DATADIR" -y & pid=$!
            wait $pid
            
            # Verify extraction succeeded
            if [ -f "$DATADIR/TFK.exe" ]; then
                echo "Extraction complete. Cleaning up redundant files..."
                
                # Remove redundant files
                rm -f "$DATADIR/TFK.exe"
                rm -f "$DATADIR/taskforcekampas-win.zip"
                rm -f "$DATADIR/"*.dll
                
                echo "Cleanup complete."
            else
                echo "Error: TFK.exe not found after extraction."
                exit 1
            fi
        else
            echo "Error: MD5 checksum of taskforcekampas-win.zip does not match expected value!"
            echo "Expected: $expected_checksum"
            echo "Actual:   $actual_checksum"
            exit 1
        fi
    else
        echo "taskforcekampas-win.zip not found in $DATADIR."
        echo "Skipping extraction step."
    fi
}

apply_xdelta() {
    # Check if the data.win file exists and apply xdelta
    if [ -f "$DATADIR/data.win" ]; then
        echo "Patching data.win..."
        
        # Apply xdelta3 patch
        output=$(xdelta3 -d -s "$DATADIR/data.win" "$TOOLDIR/taskforcekampas.xdelta" "$DATADIR/game.droid" 2>&1)
        
        if [ $? -eq 0 ] && [ -f "$DATADIR/game.droid" ]; then
            echo "Patch applied successfully. Cleaning up old files..."
            echo "$output"
            rm -f "$DATADIR/data.win"
        else
            echo "Error: Patching failed — game.droid not created."
            echo "$output"
            exit 1
        fi
    else
        echo "No data.win file found — skipping patch."
    fi
}

zip_archive() {
    echo "Creating game.port archive..."
    (cd "$GAMEDIR" && zip -r -0 "$DATAFILE" assets/ >/dev/null)
    
    if [ $? -eq 0 ]; then
        echo "Archive created successfully. Removing assets directory..."
        rm -rf "$DATADIR"
        mkdir -p "$GAMEDIR/saves"
        echo "Archive creation complete."
    else
        echo "Error: Failed to create game.port archive."
        exit 1
    fi
}

install_complete() {
    # Create install completion flag
    touch "install_completed"
    # Measure time to complete
	END_TIME=$(date +%s)
    DURATION=$((END_TIME - START_TIME))
	echo "Script completed in $DURATION seconds"
	echo "Installation completed successfully!"
    echo "-----------------------------"
    echo "Process finished at: $(date)"
}

process_game() {
    echo "Starting game installation process..."
    echo "-----------------------------"
    
    # Extract and verify the game archive
    extract_and_verify || patch_failure
    sleep 1
    
    # Apply the xdelta patch
    apply_xdelta || patch_failure
    sleep 1
    
    # Create the final archive
    echo "Finishing up..."
    zip_archive || patch_failure
    sleep 1
    
    # Mark installation as complete
    install_complete
}

# Call the main function
process_game