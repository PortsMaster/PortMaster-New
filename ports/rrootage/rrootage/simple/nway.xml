<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
<fire>
 <direction type="absolute">180-(3+$rank*6)*25/2</direction>
 <bullet/>
</fire>
