<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
<repeat>
<times>2+$rank*6</times>
<action>
<fire>
<direction>20+$rand*80</direction>
<bullet/>
</fire>
<fire>
<direction>-20-$rand*80</direction>
<bullet/>
</fire>
<wait>20+$rank*12</wait>
</action>
</repeat>
<wait>90</wait>
</action>

</bulletml>
