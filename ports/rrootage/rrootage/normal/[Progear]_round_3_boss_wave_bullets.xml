<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
 <fire>
  <direction>50</direction>
  <bulletRef label="wave">
   <param>-5</param>
  </bulletRef>
 </fire>
 <wait>40</wait>
 <fire>
  <direction>-50</direction>
  <bulletRef label="wave">
   <param>5</param>
  </bulletRef>
 </fire>
 <wait>40</wait>
</action>

<bullet label="wave">
<speed>1.6</speed>
<action>
<fire>
 <direction>0</direction>
 <bulletRef label="nrm"/>
</fire>
<repeat><times>2+$rank*5.2</times>
<action>
 <wait>8</wait>
 <fire>
  <direction type="sequence">$1</direction>
  <bulletRef label="nrm"/>
 </fire>
</action>
</repeat>
<vanish/>
</action>
</bullet>

<bullet label="nrm">
<speed>1</speed>
</bullet>

</bulletml>
